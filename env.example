# Copy this file to .env and fill in your values

# Telegram bot token used to validate initData in Mini App auth
BOT_TOKEN=

# JWT secret to sign/verify tokens issued by the backend
JWT_SECRET=

# Turso/libSQL connection (remote-only)
# Example: libsql://your-db-xxxxx.turso.io
TURSO_DATABASE_URL=
# Turso auth token string
TURSO_AUTH_TOKEN=

# Optional: cache TTL for rankings/hidden gems in milliseconds (default 20000)
RANKINGS_CACHE_TTL_MS=20000

# Optional: override app port inside container (compose maps 3000->3000)
# PORT=3000


